<h1 class="mb-4">Add a New Farm</h1>

<form action="/farms" method="POST" class="mb-3">
  <div class="mb-3">
    <label for="name" class="form-label">Farm Name</label>
    <input
      type="text"
      name="name"
      id="name"
      placeholder="Farm name"
      class="form-control"
      required
    />
  </div>

  <div class="mb-3">
    <label for="city" class="form-label">City Name</label>
    <input
      type="text"
      name="city"
      id="city"
      placeholder="City name"
      class="form-control"
      required
    />
  </div>

  <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input
      type="email"
      name="email"
      id="email"
      placeholder="Email"
      class="form-control"
      required
    />
  </div>

  <button class="btn btn-success">Add Farm</button>
</form>

<a href="/products" class="btn btn-secondary">Back to Products</a>
